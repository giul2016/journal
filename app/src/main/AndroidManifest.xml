<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.upem.journal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.NewsFeedActivity"
            android:label="@string/title_activity_news"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.WebActivity"></activity>
        <activity
            android:name=".activity.TwitterActivity"
            android:label="@string/twitter"></activity>
        <activity android:name=".activity.SettingsActivity"></activity>
        <activity
            android:name=".activity.NewsContentActivity"
            android:parentActivityName=".activity.NewsFeedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.NewsFeedActivity" />
        </activity>
        <activity android:name=".activity.EditCategoriesActivity"></activity>
        <activity android:name=".activity.EditNewsFeedsActivity"></activity>
        <activity android:name=".activity.AddNewCategoryActivity"></activity>
        <activity
            android:name=".activity.FacebookActivity"
            android:label="@string/facebook"></activity>
        <activity android:name=".activity.FbPageFeed" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider185863238451126"
            android:exported="true" />

        <activity android:name=".activity.FbPage"></activity>
    </application>

</manifest>
